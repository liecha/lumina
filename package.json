{
  "name": "lumina_app",
  "version": "1.0.0",
  "description": "Desktop version of Lumina",
  "main": "main.js",
  "scripts": {
    "setup": "node setup.js",
    "start": "electron-forge start",
    "dev": "NODE_ENV=development electron .",
    "test-streamlit": "cd streamlit_app && streamlit run lumina_app.py",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "postinstall": "node setup.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "rebuild": "electron-rebuild"
  },
  "build": {
    "appId": "com.lumina.healthtracker",
    "productName": "Lumina",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "setup.js",
      "package.json",
      "!streamlit_app/**/__pycache__",
      "!streamlit_app/**/*.pyc",
      "!streamlit_app/**/.DS_Store",
      "!node_modules/.cache",
      "!dist"
    ],
    "extraResources": [
      {
        "from": "streamlit_app",
        "to": "streamlit_app",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/.DS_Store"
        ]
      },
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": ".env.template",
        "to": ".env.template"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/lumina_1.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/lumina_1.icns",
      "category": "public.app-category.healthcare-fitness",
      "bundleVersion": "1.0.0",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "distribution",
      "extendInfo": {
        "CFBundleExecutable": "Lumina",
        "CFBundleDisplayName": "Lumina",
        "CFBundleIdentifier": "com.yourcompany.lumina_app",
        "CFBundleName": "Lumina",
        "CFBundleVersion": "1.0.0",
        "CFBundleShortVersionString": "1.0.0",
        "LSMinimumSystemVersion": "10.15.0",
        "NSHighResolutionCapable": true,
        "LSEnvironment": {
          "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
        }
      }
    },
    "dmg": {
      "title": "Lumina Health Tracker",
      "icon": "assets/lumina_1.icns",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/lumina_1.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": null
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "electron-squirrel-startup": "^1.0.1"
  }
}